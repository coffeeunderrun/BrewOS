{
    "asm-code-lens.labels.colon": "With colon",
    "C_Cpp.default.cStandard": "gnu23",
    "C_Cpp.default.includePath": [
        "${workspaceFolder}/edk2/MdePkg/Include/**",
        "${workspaceFolder}/BootPkg/Include/**",
        "${workspaceFolder}/kernel/arch/api/**",
    ],
    "C_Cpp.default.intelliSenseMode": "gcc-x64",
    "C_Cpp.formatting": "vcFormat",
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.block": "sameLine",
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.function": "sameLine",
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.lambda": "sameLine",
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.namespace": "sameLine",
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.type": "sameLine",
    "cmake.automaticReconfigure": false,
    "cmake.buildDirectory": "${workspaceFolder}/Build",
    "cmake.configureOnEdit": false,
    "cmake.configureOnOpen": false,
    "debug.allowBreakpointsEverywhere": true,
    "files.trimTrailingWhitespace": true,
    "files.associations": {
        "*.asm": "asm-collection",
        "*.asm16": "asm-collection",
        "*.nasmb": "asm-collection",
        "*.aslc": "c",
        "*.c": "c",
        "*.h": "c",
        "*.dec": "edk2_dec",
        "*.dsc": "edk2_dsc",
        "*.fdf": "edk2_fdf",
        "*.inf": "edk2_inf",
        "*.inc": "c"
    },
    "files.exclude": {
        "**/*.a": true,
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Autogen.c": true,
        "**/Makefile": true,
        "Build/**": true,
    },
    "git.autoRepositoryDetection": false,
    "search.exclude": {
        "edk2/**": true,
    },
    "sonarlint.pathToCompileCommands": "${workspaceFolder}/Build/compile_commands.json",
}